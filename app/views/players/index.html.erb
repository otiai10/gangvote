<h4><%= link_to('TOP', {:controller => 'top'}) %></h4>
<h3>
  <% if @vote_left.to_i < 1 %>
    <%= @user_name %>@もう投票できない
  <% else %>
    <%= @user_name %>@あと<%= @vote_left %>回
  <% end %>
</h3>
<h1>Players List</h1>
<h3><%= @mess %></h3>
<table>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Pos.</th>
    <th>Gr.</th>
    <th>Imgurl</th>
    <th>Introduction</th>
    <th></th>
    <th>POINT</th>
    <!--th>From</th-->
    <!--th>Info</th-->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each_with_index do |player, _i| %>
  <tr id="<%= _i %>">
    <td><%= player.number %></td>
    <td><%= player.name %><br><%= player.kana %></td>
    <td><%= POSITIONS[player.position] %></td>
    <td><%= GRADES[player.grade] %></td>
    <td><%= image_tag player.imgurl, :class => 'prof-list' %></td>
    <td><%= player.introduction %></td>
    <td>
      <!--a href="players/<%= player.id %>/vote"><button>VOTE</button</a-->
      <%= form_tag({ :action => 'vote' }, { :class => 'hoge' }) do %>
        <%= hidden_field_tag('id', player.id) %>
        <%= submit_tag 'VOTE' %>
      <% end %>
    </td>
    <td><% if player.points.nil? %>0<% else %><%= player.points %><% end %></td>
    <!--td><%= player.from %></td-->
    <!--td><%= player.info %></td-->
    <td><%= link_to 'Show', player %></td>
    <!--td><%= link_to 'Edit', edit_player_path(player) %></td-->
    <!--td><%= link_to 'Destroy', player, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td-->
  </tr>
<% end %>
</table>

